@model ileriRepository.Models.CountyModel
@{
    ViewData["Title"] = "Crud";
}



<h4>@Model.Head</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="form-group">
                <label asp-for="County.Id" class="control-label"></label>
                <input asp-for="County.Id" class="form-control" />
                <span asp-validation-for="County.Id" class="text-danger"></span>
            </div>
                <label asp-for="County.CountyName" class="control-label"></label>
                <input asp-for="County.CountyName" class="form-control" />
                <span asp-validation-for="County.CountyName" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label class="control-label">City</label>
                <select asp-for="County.CityId" class="form-control" name="County.CityId">
                    @foreach (var item in Model.Cities)
                    {
                        if (Model.County.CityId != item.Id)
                        {
                            <option value="@item.Id">@item.CityName</option>
                        }
                        else
                        {
                            <option selected value="@item.Id">@item.CityName</option>
                        }
                    }
                </select>
            </div>


            <div class="form-group">
                <input type="submit" value="@Model.Text" class="@Model.Cls" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
